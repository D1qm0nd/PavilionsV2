<Border x:Class="WPFUserControls.UserControls.ImagePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFUserControls.UserControls"
             mc:Ignorable="d"
             Background="Gray"
             BorderBrush="Black"
             BorderThickness="1"
             AllowDrop="True"
             MouseLeftButtonDown="ImagePicker_OnMouseLeftButtonDown"
             MouseEnter="ImagePicker_OnMouseEnter"
             MouseLeave="ImagePicker_OnMouseLeave"
             >
</Border>
