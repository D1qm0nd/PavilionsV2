<Window x:Class="PavilionsApplication.Windows.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PavilionsApplication.Windows"
        mc:Ignorable="d"
        Title="Captcha"
        Width="300"
        ResizeMode="NoResize"
        Height="170"
        Closing="Captcha_OnClosing">
    
    <StackPanel Height="170">
        <Label x:Name="CaptchaText" Height="40" Margin=" 10 10 10 1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
        <TextBox x:Name="UserInput" Height="30"  Margin=" 10 0 10 1 "></TextBox>
        <Button x:Name="CaptchaButton" Height="30"  Margin=" 10 0 10 0" Click="CaptchaButton_OnClick">Ввести капчу</Button>
    </StackPanel>
</Window>
